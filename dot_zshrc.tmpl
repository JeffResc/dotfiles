# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# homebrew
export HOMEBREW_PREFIX="/opt/homebrew"

# Ensure Homebrew completions are in fpath
if [[ -d "$HOMEBREW_PREFIX/share/zsh/site-functions" ]]; then
    fpath=("$HOMEBREW_PREFIX/share/zsh/site-functions" $fpath)
fi

# Initialize completion system (cached, regenerates daily)
autoload -Uz compinit
if [[ -n ${ZDOTDIR:-$HOME}/.zcompdump(#qN.mh+24) ]]; then
  compinit
else
  compinit -C
fi

# PATH
export PATH="$HOME/.local/bin:$HOME/go/bin:$HOMEBREW_PREFIX/opt/rustup/bin:$HOME/.cargo/bin:$HOMEBREW_PREFIX/bin:${KREW_ROOT:-$HOME/.krew}/bin:$PATH"

# nvm (lazy loaded)
export NVM_DIR="$HOME/.nvm"
_load_nvm() {
  unset -f nvm node npm npx
  [ -s "$HOMEBREW_PREFIX/opt/nvm/nvm.sh" ] && \. "$HOMEBREW_PREFIX/opt/nvm/nvm.sh"
  [ -s "$HOMEBREW_PREFIX/opt/nvm/etc/bash_completion.d/nvm" ] && \. "$HOMEBREW_PREFIX/opt/nvm/etc/bash_completion.d/nvm"
}
nvm() { _load_nvm && nvm "$@"; }
node() { _load_nvm && node "$@"; }
npm() { _load_nvm && npm "$@"; }
npx() { _load_nvm && npx "$@"; }

# aliases
alias ls='lsd'
alias l='lsd'
alias cat='bat'
alias kctx='kubie ctx'

# kubecolor
alias kubectl='kubecolor'
compdef kubecolor=kubectl

# kube editor
export KUBE_EDITOR="$HOME/.local/bin/kube-edit.sh"

# fzf
source <(fzf --zsh)

# azure-select
source "$HOME/.azure-select.sh"

# zoxide
if [ -z "$DISABLE_ZOXIDE" ]; then
  eval "$(zoxide init --cmd cd zsh)"
fi

# p10k
source $HOMEBREW_PREFIX/share/powerlevel10k/powerlevel10k.zsh-theme

# menu autocomplete
zstyle ':completion:*' menu select

# kubectl/uds aliases
[ -f ~/.kubectl_aliases ] && source ~/.kubectl_aliases
[ -f ~/.uds_aliases ] && source ~/.uds_aliases

{{- if eq .class "personal" }}
export KUBECONFIG=~/.kube/talos_config
export TALOSCONFIG=~/.talos/talos_config
{{ end }}

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# 1Password Account
alias op_account="export OP_ACCOUNT=$(op account ls --format=json | jq -r '.[0].account_uuid')"
